<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/MdCardView.Card">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="200dp"
        android:paddingBottom="@dimen/mdListItemSpacing"
        android:paddingTop="@dimen/mdListItemSpacing">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/mdListItemHeight_sm"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/mdLayoutSpacing"
            android:paddingRight="@dimen/mdLayoutSpacing_lg"
            android:text="Create group chat"
            style="@style/MdText.Subhead1.SingleLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/mdListItemHeight_sm"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/mdLayoutSpacing"
            android:paddingRight="@dimen/mdLayoutSpacing_lg"
            android:text="Create 1-1"
            style="@style/MdText.Subhead1.SingleLine" />
    </LinearLayout>
</android.support.v7.widget.CardView>