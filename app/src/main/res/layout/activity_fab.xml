<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MdToolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:text="Button types"
            style="@style/MdSubHeader.List" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout style="@style/AppStyle.GridItem">

                <android.support.design.widget.FloatingActionButton
                    android:layout_margin="@dimen/mdLayoutSpacing"
                    android:clickable="true"
                    app:fabSize="normal"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    style="@style/MdFloatingActionButton" />
            </FrameLayout>

            <FrameLayout style="@style/AppStyle.GridItem">

                <android.support.design.widget.FloatingActionButton
                    android:layout_margin="@dimen/mdLayoutSpacing"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    style="@style/MdFloatingActionButton" />
            </FrameLayout>

            <FrameLayout style="@style/AppStyle.GridItem" />

            <FrameLayout style="@style/AppStyle.GridItem" />
        </LinearLayout>

        <TextView
            android:text="Custom color"
            style="@style/MdSubHeader.List" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout style="@style/AppStyle.GridItem">

                <android.support.design.widget.FloatingActionButton
                    android:layout_margin="@dimen/mdLayoutSpacing"
                    android:clickable="true"
                    app:backgroundTint="?attr/mdColor_primaryPalette"
                    app:fabSize="normal"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    style="@style/MdFloatingActionButton"
                    android:id="@+id/floatingActionButton" />
            </FrameLayout>

            <FrameLayout style="@style/AppStyle.GridItem">

                <android.support.design.widget.FloatingActionButton
                    android:layout_margin="@dimen/mdLayoutSpacing"
                    android:clickable="true"
                    app:backgroundTint="?attr/mdColor_warnPalette"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    style="@style/MdFloatingActionButton" />
            </FrameLayout>

            <FrameLayout style="@style/AppStyle.GridItem" />

            <FrameLayout style="@style/AppStyle.GridItem" />
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_popup_window"
        android:layout_gravity="right"
        android:layout_margin="@dimen/mdLayoutSpacing"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add_black_24dp"
        style="@style/MdFloatingActionButton" />
</LinearLayout>